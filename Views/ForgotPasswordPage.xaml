<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PenPal.Views.ForgotPasswordPage"
             Title="Forgot Password">
    <VerticalStackLayout Padding="20" Spacing="10">

        <Button Text="← Back" BackgroundColor="Transparent" TextColor="Black" Clicked="OnBackClicked"/>

        <Label Text="Forgot Password" FontSize="24" FontAttributes="Bold"/>
        <Label Text="Enter your email and a link will be sent to reset your password." FontSize="14"/>

        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email"/>
        <Label Text="Example: johanjosh@gmail.com" FontSize="12" TextColor="Gray"/>

        <Button Text="Submit"
                BackgroundColor="Blue" 
                TextColor="White"
                Clicked="OnSubmitClicked"/>

    </VerticalStackLayout>
</ContentPage>
